				kraje.sort();
			        for (var i=kraje.length-1;i>=0;i--) {
			        if ( kraje[i]=="POL" ) {
			        $('#adminMsg5').prepend('<option val="'+kraje[i]+'" selected>'+kraje[i]+'</option>');					
			        } else {
